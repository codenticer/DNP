@model DNP.Models.Paykun.TransactionStatusRes
@{
    ViewBag.Title = "Failed";
}

<h2>Failed</h2>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Failed</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>

</head>
<body>
    <form id="form1">
        <div>
            <h1>Payment Failed</h1>
            <div id="payment_form">
                @*<asp:Literal runat="server" ID="payment_failed_detail" />*@
                <table>

                    <thead>

                        <tr>

                            <th>Transaction Id</th>
                            <th>Amount</th>
                            <th>OrderId</th>
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>Mobile</th>
                            <th>Product Name</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>

                            <td>
                                @Model.data.transaction.payment_id
                            </td>
                            <td> @Model.data.transaction.order.gross_amount </td>
                            <td> @Model.data.transaction.order.order_id </td>
                            <td> @Model.data.transaction.customer.name </td>
                            <td> @Model.data.transaction.customer.email_id </td>
                            <td> @Model.data.transaction.customer.mobile_no </td>
                            <td> @Model.data.transaction.order.product_name </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </form>
</body>
</html>